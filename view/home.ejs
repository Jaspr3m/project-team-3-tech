<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TravelLink</title>
    <link rel="stylesheet" href="/static/css/profile.css" />
    <link rel="stylesheet" href="/static/css/header.css" />
    <link rel="stylesheet" href="/static/css/homepage.css" />
    <link rel="stylesheet" href="/static/css/style.css" />
    <style>
      body {
        margin-inline: 10%;
        font-family: "Instrument Sans", Arial, sans-serif;
      }
      h2 {
        font-size: 2.5rem;
        margin: auto;
        letter-spacing: -2.5px;
      }
      .card-row {
        display: flex;
        justify-content: space-between;
        width: 100%;
        flex-wrap: wrap;
        gap: 2rem;
        margin-bottom: 2rem;
      }
      .card {
        box-sizing: border-box;
        flex-direction: column;
        background-color: rgb(199, 199, 199);
        padding-inline: 0.5em;
        padding-block: 0.2em;
        width: 20rem;
        height: 28vh;
        border-radius: 0.4em;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
      }
      #top {
        border: solid 2px green;
        width: 100%;
        height: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0.5em;
        overflow: hidden;
      }
      #top img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
        border-radius: 0.5em;
      }
      #mid {
        border: solid 2px green;
        flex-direction: column;
        text-align: left;
        width: 100%;
        height: 40%;
        display: flex;
        border-radius: 0.5em;
        /* padding: 0.2em 0.5em; */
      }
      #title {
        font-weight: bold;
        font-size: 1.1rem;
      }
      #desc {
        font-size: 0.95rem;
        color: #333;
      }
      #bottom {
        border: solid 2px green;
        width: 100%;
        height: 10%;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        border-radius: 0.5em;
        gap: 0.5em;
        font-size: 0.95rem;
      }
      #bottom button {
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 0.3em;
        padding: 0.3em 1em;
        font-weight: bold;
        cursor: pointer;
      }
      #other-meets {
        margin-top: 2rem;
      }
      #more-meets {
        margin-top: 1rem;
        background: #00b894;
        color: #fff;
        border: none;
        border-radius: 0.3em;
        padding: 0.5em 1.5em;
        font-weight: bold;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <main>
      <div id="meeting-row">
        <h2>Recommended Meets</h2>
        <div class="card-row">
          <% meets.slice(0, 1).forEach(meet => { %>
          <div class="card">
            <div id="top">
              <img
                src="<%= meet.image || '/static/images/map_placeholder.png' %>"
                alt="Meet Image"
              />
            </div>
            <div id="mid">
              <div id="title"><%= meet.meetingName %></div>
              <div id="desc"><%= meet.description %></div>
            </div>
            <div id="bottom">
              <div id="location"><%= meet.location || '-' %></div>
              <div id="time">
                <%= meet.date || '-' %> <%= meet.time || '' %>
              </div>
              <div id="people">
                <%= meet.maxPeople ? 'Max: ' + meet.maxPeople : '' %>
              </div>
              <form
                action="/meet/<%= meet._id %>"
                method="get"
                style="margin: 0"
              >
                <button id="view" type="submit">View</button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <div id="meeting-row">
        <div id="other-meets">
          <h2>Other meets</h2>
          <a href="/more-meets"><button id="more-meets">View More</button></a>
        </div>
        <div class="card-row">
          <% meets.slice(1, 4).forEach(meet => { %>
          <div class="card">
            <div id="top">
              <img
                src="<%= meet.image || '/static/images/map_placeholder.png' %>"
                alt="Meet Image"
              />
            </div>
            <div id="mid">
              <div id="title"><%= meet.meetingName %></div>
              <div id="desc"><%= meet.description %></div>
            </div>
            <div id="bottom">
              <div id="location"><%= meet.location || '-' %></div>
              <div id="time">
                <%= meet.date || '-' %> <%= meet.time || '' %>
              </div>
              <div id="people">
                <%= meet.maxPeople ? 'Max: ' + meet.maxPeople : '' %>
              </div>
              <form
                action="/meet/<%= meet._id %>"
                method="get"
                style="margin: 0"
              >
                <button id="view" type="submit">View</button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <footer><%- include('partials/footer') %></footer>
  </body>
</html>
