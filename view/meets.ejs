<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="stylesheet" href="/static/header.css" />
    <title>Manage Meets</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }
      .container {
        display: grid;
        grid-template-columns: 10vw 1fr;
        height: 100vh;
      }
      .sidebar {
        background: #f0f0f0;
        min-width: 80px;
        max-width: 300px;
        border-right: 1px solid #ddd;
      }
      .main {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .meet-item {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 700px;
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
      }
      .meet-img {
        width: 200px;
        height: 120px;
        background: #cce;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #888;
        border-right: 1px solid #eee;
        flex-shrink: 0;
      }
      .meet-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px 0 0 8px;
      }
      .meet-info {
        flex: 1;
        padding: 1rem;
      }
      .meet-info h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
      }
      .meet-info p {
        margin: 0 0 0.3rem 0;
        font-size: 0.95rem;
        color: #666;
      }
      .meet-info a {
        margin-top: 0.5rem;
        color: #007bff;
        text-decoration: underline;
        font-weight: bold;
        cursor: pointer;
        display: inline-block;
      }
      @media (max-width: 700px) {
        .container {
          grid-template-columns: 1fr;
        }
        .sidebar {
          display: none;
        }
        .main {
          padding: 1rem;
        }
        .meet-item {
          flex-direction: column;
          align-items: stretch;
        }
        .meet-img {
          width: 100%;
          height: 120px;
          border-right: none;
          border-bottom: 1px solid #eee;
          border-radius: 8px 8px 0 0;
        }
      }
      .meet-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        width: 100%;
        max-width: 800px;
      }
      .meet-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        width: calc(50% - 0.5rem);
        display: flex;
        flex-direction: column;
        position: relative;
      }
      .meet-card .meet-img {
        width: 100%;
        height: 150px;
        border-radius: 8px 8px 0 0;
      }
      .meet-card .meet-info {
        padding: 1rem;
        flex: 1;
      }
      .meet-card h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.2rem;
      }
      .meet-card p {
        margin: 0 0 0.3rem 0;
        font-size: 0.9rem;
        color: #666;
      }
      .meet-card a {
        margin-top: 0.5rem;
        color: #007bff;
        text-decoration: underline;
        font-weight: bold;
        cursor: pointer;
        display: inline-block;
      }
      .meet-actions {
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid #eee;
      }
      .meet-actions button {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9rem;
      }
      .meet-actions .cancel-btn {
        background: #dc3545;
        color: #fff;
      }
      .meet-actions form {
        margin: 0;
        flex: 1;
      }
      .join-leave-form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
      }
      .join-leave-form button {
        flex: 1;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <div class="container">
      <div class="sidebar">
        <!-- Sidebar content (optional) -->
      </div>
      <div class="main">
        <main>
          <h1>Manage Meets</h1>
          <div class="meet-row">
            <% const userId = 'demoUserId'; %> <% meets.forEach(meet => { %>
            <div class="meet-card" data-meet-id="<%= meet._id %>">
              <div class="meet-img">
                <img
                  src="<%= meet.image || '/static/images/map_placeholder.png' %>"
                  alt="Meet Image"
                />
              </div>
              <div class="meet-info">
                <h3><%= meet.meetingName %></h3>
                <p><%= meet.location %></p>
                <p><%= meet.description %></p>
                <p>Max: <%= meet.maxPeople %></p>
              </div>
              <a href="/meet/<%= meet._id %>">View</a>
              <div class="meet-actions">
                <% const isMember = Array.isArray(meet.members) &&
                meet.members.includes(userId); %> <% if (!isMember) { %>
                <form
                  method="POST"
                  action="/meet/<%= meet._id %>/join"
                  class="join-leave-form"
                  data-action="join"
                >
                  <input type="hidden" name="userId" value="<%= userId %>" />
                  <button type="submit">Join Meet</button>
                </form>
                <% } else { %>
                <form
                  method="POST"
                  action="/meet/<%= meet._id %>/cancel"
                  class="join-leave-form"
                  data-action="leave"
                >
                  <input type="hidden" name="userId" value="<%= userId %>" />
                  <button type="submit" class="cancel-btn">Leave Meet</button>
                </form>
                <% } %>
              </div>
            </div>
            <% }) %>
          </div>
        </main>
        <script>
          function updateJoinLeaveButton(card, isMember) {
            const meetId = card.getAttribute("data-meet-id");
            let formHtml;
            if (isMember) {
              formHtml = `<form method='POST' action='/meet/${meetId}/cancel' class='join-leave-form' data-action='leave'><input type='hidden' name='userId' value='demoUserId' /><button type='submit' class='cancel-btn'>Leave Meet</button></form>`;
            } else {
              formHtml = `<form method='POST' action='/meet/${meetId}/join' class='join-leave-form' data-action='join'><input type='hidden' name='userId' value='demoUserId' /><button type='submit'>Join Meet</button></form>`;
            }
            card.querySelector(".meet-actions").innerHTML = formHtml;
            attachJoinLeaveListeners(card);
          }
          function attachJoinLeaveListeners(scope) {
            (scope
              ? scope.querySelectorAll(".join-leave-form")
              : document.querySelectorAll(".join-leave-form")
            ).forEach((form) => {
              if (!form.hasAttribute("data-listener")) {
                form.setAttribute("data-listener", "true");
                form.addEventListener("submit", async function (e) {
                  e.preventDefault();
                  const card = form.closest(".meet-card");
                  const meetId = card.getAttribute("data-meet-id");
                  const action = form.getAttribute("data-action");
                  const url = form.action;
                  const formData = new FormData(form);
                  await fetch(url, { method: "POST", body: formData });
                  if (action === "join") {
                    alert("You joined the meet!");
                    updateJoinLeaveButton(card, true);
                  } else {
                    alert("You left the meet.");
                    updateJoinLeaveButton(card, false);
                  }
                });
              }
            });
          }
          attachJoinLeaveListeners();
        </script>
      </div>
    </div>
  </body>
</html>
