<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/css/header.css" />
    <link rel="stylesheet" href="/static/style.css" />
    <title>Manage Meets</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }
      .container {
        display: grid;
        grid-template-columns: 10vw 1fr;
        height: 100vh;
      }
      .sidebar {
        background: #f0f0f0;
        min-width: 80px;
        max-width: 300px;
        border-right: 1px solid #ddd;
      }
      .main {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .meet-item {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 700px;
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
      }
      .meet-img {
        width: 200px;
        height: 120px;
        background: #cce;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #888;
        border-right: 1px solid #eee;
        flex-shrink: 0;
      }
      .meet-img img {
        width: 100%;
        height: 100%;
        max-width: 220px;
        max-height: 220px;
        object-fit: cover;
        border-radius: 8px 0 0 8px;
      }
      .meet-info {
        flex: 1;
        padding: 1rem;
      }
      .meet-info h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
      }
      .meet-info p {
        margin: 0 0 0.3rem 0;
        font-size: 0.95rem;
        color: #666;
      }
      .meet-info a {
        margin-top: 0.5rem;
        color: #007bff;
        text-decoration: underline;
        font-weight: bold;
        cursor: pointer;
        display: inline-block;
      }
      @media (max-width: 700px) {
        .container {
          grid-template-columns: 1fr;
        }
        .sidebar {
          display: none;
        }
        .main {
          padding: 1rem;
        }
        .meet-item {
          flex-direction: column;
          align-items: stretch;
        }
        .meet-img {
          width: 100%;
          height: 120px;
          border-right: none;
          border-bottom: 1px solid #eee;
          border-radius: 8px 8px 0 0;
        }
      }
      .meet-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        width: 100%;
        max-width: 800px;
      }
      .meet-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        width: calc(50% - 0.5rem);
        display: flex;
        flex-direction: column;
        position: relative;
      }
      .meet-card .meet-img {
        width: 100%;
        height: 150px;
        border-radius: 8px 8px 0 0;
      }
      .meet-card .meet-info {
        padding: 1rem;
        flex: 1;
      }
      .meet-card h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.2rem;
      }
      .meet-card p {
        margin: 0 0 0.3rem 0;
        font-size: 0.9rem;
        color: #666;
      }
      .meet-card a {
        margin-top: 0.5rem;
        color: #007bff;
        text-decoration: underline;
        font-weight: bold;
        cursor: pointer;
        display: inline-block;
      }
      .meet-actions {
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid #eee;
      }
      .meet-actions button {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9rem;
      }
      .meet-actions .cancel-btn {
        background: #dc3545;
        color: #fff;
      }
      .meet-actions form {
        margin: 0;
        flex: 1;
      }
      .join-leave-form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
      }
      .join-leave-form button {
        flex: 1;
      }
      .tab-btn {
        padding: 0.7rem 2rem;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 6px;
        border: none;
        cursor: pointer;
      }
      #joinedTabBtn {
        background: #007bff;
        color: #fff;
      }
      #createdTabBtn {
        background: #eee;
        color: #333;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <main style="max-width: 900px; margin: 0 auto; padding: 2rem 1rem">
      <div style="display: flex; gap: 1rem; margin-bottom: 2rem">
        <button id="joinedTabBtn" class="tab-btn">Joined Meets</button>
        <button id="createdTabBtn" class="tab-btn">Created Meets</button>
      </div>
      <div id="joinedMeetsSection">
        <h1 style="margin-bottom: 2rem">Joined Meets</h1>
        <% if (joinedMeets.length === 0) { %>
        <p style="font-size: 1.2rem; color: #888; text-align: center">
          You haven't joined any meets yet.
        </p>
        <% } %>
        <div class="meet-row">
          <% joinedMeets.forEach(meet => { %> <%- include('partials/meets', {
          meet: meet }) %> <% }) %>
        </div>
      </div>
      <div id="createdMeetsSection" style="display: none">
        <h1 style="margin-bottom: 2rem">Created Meets</h1>
        <% if (createdMeets.length === 0) { %>
        <p style="font-size: 1.2rem; color: #888; text-align: center">
          You haven't created any meets yet.
        </p>
        <% } %>
        <div class="meet-row">
          <% createdMeets.forEach(meet => { %> <%- include('partials/meets', {
          meet: meet }) %> <% }) %>
        </div>
      </div>
    </main>
    <script>
      const joinedBtn = document.getElementById("joinedTabBtn");
      const createdBtn = document.getElementById("createdTabBtn");
      const joinedSection = document.getElementById("joinedMeetsSection");
      const createdSection = document.getElementById("createdMeetsSection");
      joinedBtn.addEventListener("click", function () {
        joinedSection.style.display = "";
        createdSection.style.display = "none";
        joinedBtn.style.background = "#007bff";
        joinedBtn.style.color = "#fff";
        createdBtn.style.background = "#eee";
        createdBtn.style.color = "#333";
      });
      createdBtn.addEventListener("click", function () {
        joinedSection.style.display = "none";
        createdSection.style.display = "";
        createdBtn.style.background = "#007bff";
        createdBtn.style.color = "#fff";
        joinedBtn.style.background = "#eee";
        joinedBtn.style.color = "#333";
      });
    </script>
    <!-- <footer><%- include('partials/footer') %></footer> -->
  </body>
</html>
