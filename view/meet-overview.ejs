<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meet Overview</title>
    <link rel="stylesheet" href="/static/css/header.css" />
    <link rel="stylesheet" href="/static/css/meet-overview.css" />
    <link rel="stylesheet" href="/static/css/footer.css" />
  </head>
  <body>
    <header><%- include('partials/header') %></header>
         <a href="/" class="back-link">‚Üê Back to Home</a>
    <div class="meet-grid">
      <div class="meet-image">
        <img
          src="<%= meet.image || '/static/images/map_placeholder.png' %>"
          alt="Meet Image"
        />
      </div>
      <div class="meet-info">
        <div><h1><%= meet.title %></h1></div>
        <p><strong>Description:</strong> <%= meet.description %></p>
        <p><strong>Location:</strong> <%= meet.location %></p>
        <p><strong>Date:</strong> <%= meet.date %></p>
        <p><strong>Time:</strong> <%= meet.time %></p>
        <p><strong>Max People:</strong> <%= meet.maxPeople %></p>
        <p>
          <strong>Age Range:</strong>
          <% if (!meet.ageMin && !meet.ageMax) { %>
            Any
          <% } else if (meet.ageMin && meet.ageMax) { %>
            <%= meet.ageMin %> - <%= meet.ageMax %>
          <% } else if (meet.ageMin) { %>
            <%= meet.ageMin %>+
          <% } else if (meet.ageMax) { %>
            Up to <%= meet.ageMax %>
          <% } %>
        </p>
        <p>
          <strong>Created by:</strong>
          <% if (userId && String(userId) === String(meet.creatorId)) { %>
            You
          <% } else { %>
            <a href="/profile/<%= meet.creatorId %>">
              <%= meet.creatorName || 'View Profile' %>
            </a>
          <% } %>
        </p>
        <div
          class="meet-actions"
          id="join-leave-form-container"
          data-meet-id="<%= meet._id %>"
        >
          <% if (!isMember) { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/join"
            style="display: inline"
            class="join-leave-form"
            data-action="join"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit">Join Meet</button>
          </form>
          <% } else { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/cancel"
            style="display: inline"
            class="join-leave-form"
            data-action="leave"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit" class="cancel-btn">Leave Meet</button>
          </form>
          <% } %>
          <% if (userId && String(userId) === String(meet.creatorId)) { %>
            <a href="/edit-meet/<%= meet._id %>" class="edit-meet-btn" style="margin-left: 1rem; background: #087E8B; color: #fff; padding: 8px 16px; border-radius: 8px; text-decoration: none; font-weight: bold;">Edit Meet</a>
            <button id="delete-meet-btn" style="margin-left: 1rem; background: #d9534f; color: #fff; padding: 8px 16px; border-radius: 8px; border: none; font-weight: bold; cursor: pointer;">Delete Meet</button>
          <% } %>
        </div>
        <div id="is-member" style="margin-top: 2rem">
          <% if (isMember) { %>
            <h3 style="color: green; font-weight: bold;">You are already a part of the meet.</h3>
          <% } %>
        </div>
      </div>
    </div>
    <div class="user-match-list-section">
      <h2>Who could you match with?</h2>
      <%- include('partials/user-match-list', { userMatches: userMatches }) %>
    </div>
    <footer> <%- include('partials/footer', { userId: userId }) %></footer>
    <script>
      // Attach event listeners to join/leave forms
      function attachJoinLeaveListeners() {
        document.querySelectorAll(".join-leave-form").forEach((form) => {
          if (!form.hasAttribute("data-listener")) {
            form.setAttribute("data-listener", "true");
            form.addEventListener("submit", async function (e) {
              e.preventDefault();
              const action = form.getAttribute("data-action");
              const url = form.action;
              const formData = new FormData(form);
              await fetch(url, { method: "POST", body: formData });
              if (action === "join") {
                alert("You joined the meet!");
                // Instantly swap to leave button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/cancel' class='join-leave-form' data-action='leave'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit' class='cancel-btn'>Leave Meet</button></form>`;
              } else {
                alert("You left the meet.");
                // Instantly swap to join button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/join' class='join-leave-form' data-action='join'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit'>Join Meet</button></form>`;
              }
              attachJoinLeaveListeners();
            });
          }
        });
      }
      attachJoinLeaveListeners();
      // Delete Meet button logic
      const deleteBtn = document.getElementById("delete-meet-btn");
      if (deleteBtn) {
        deleteBtn.addEventListener("click", async function () {
          if (confirm("Are you sure you want to delete this meet? This action cannot be undone.")) {
            try {
              const res = await fetch("/delete-meet/<%= meet._id %>", {
                method: "POST",
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({})
              });
              if (res.ok) {
                alert("Meet deleted successfully.");
                window.location.href = "/meets";
              } else {
                const data = await res.json().catch(() => ({}));
                alert(data.error || "Failed to delete meet.");
              }
            } catch (err) {
              alert("Error deleting meet. Please try again.");
            }
          }
        });
      }
      // Image size validation (for any file input with class 'img-upload')
      document.querySelectorAll('input[type="file"].img-upload').forEach(input => {
        input.addEventListener('change', function(e) {
          const file = e.target.files[0];
          if (file && file.size > 5 * 1024 * 1024) {
            alert('Image must be 5MB or less. Please choose a smaller file.');
            e.target.value = '';
          }
        });
      });
    </script>
  </body>
</html>