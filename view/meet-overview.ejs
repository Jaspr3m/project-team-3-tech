<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meet Overview</title>
    <link rel="stylesheet" href="/static/header.css" />
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="stylesheet" href="/static/css/meet-overview.css" />
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <div class="meet-grid">
      <div class="meet-image">
        <img
          src="<%= meet.image || '/static/images/map_placeholder.png' %>"
          alt="Meet Image"
        />
      </div>
      <div class="meet-info">
        <h1><%= meet.meetingName %></h1>
        <p><strong>Description:</strong> <%= meet.description %></p>
        <p><strong>Location:</strong> <%= meet.location %></p>
        <p><strong>Date:</strong> <%= meet.date %></p>
        <p><strong>Time:</strong> <%= meet.time %></p>
        <p><strong>Max People:</strong> <%= meet.maxPeople %></p>
        <p><strong>Vibe:</strong> <%= meet.vibe || 'N/A' %></p>
        <p>
          <strong>Preferred Gender:</strong> <%= meet.preferredGender || 'N/A'
          %>
        </p>
        <p>
          <strong>Age Range:</strong> <%= meet.ageMin || '?' %> - <%=
          meet.ageMax || '?' %>
        </p>
        <div
          class="meet-actions"
          id="join-leave-form-container"
          data-meet-id="<%= meet._id %>"
        >
          <% if (!isMember) { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/join"
            style="display: inline"
            class="join-leave-form"
            data-action="join"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit">Join Meet</button>
          </form>
          <% } else { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/cancel"
            style="display: inline"
            class="join-leave-form"
            data-action="leave"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit" class="cancel-btn">Leave Meet</button>
          </form>
          <% } %>
        </div>
        <div style="margin-top: 2rem">
          <h3>Members:</h3>
          <% if (meet.members && meet.members.length > 0) { %>
          <ul style="list-style: none; padding: 0">
            <% meet.members.forEach(function(member) { %>
            <li><%= member.name %></li>
            <% }) %>
          </ul>
          <% } else { %>
          <p>No one has joined this meet yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="user-match-list-section">
      <h2>Who could you match with?</h2>
      <%- include('partials/user-match-list', { userMatches: userMatches }) %>
    </div>
    <footer><%- include('partials/footer') %></footer>
    <script>
      // Attach event listeners to join/leave forms
      function attachJoinLeaveListeners() {
        document.querySelectorAll(".join-leave-form").forEach((form) => {
          if (!form.hasAttribute("data-listener")) {
            form.setAttribute("data-listener", "true");
            form.addEventListener("submit", async function (e) {
              e.preventDefault();
              const action = form.getAttribute("data-action");
              const url = form.action;
              const formData = new FormData(form);
              await fetch(url, { method: "POST", body: formData });
              if (action === "join") {
                alert("You joined the meet!");
                // Instantly swap to leave button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/cancel' class='join-leave-form' data-action='leave'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit' class='cancel-btn'>Leave Meet</button></form>`;
              } else {
                alert("You left the meet.");
                // Instantly swap to join button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/join' class='join-leave-form' data-action='join'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit'>Join Meet</button></form>`;
              }
              attachJoinLeaveListeners();
            });
          }
        });
      }
      attachJoinLeaveListeners();
    </script>
  </body>
</html>
