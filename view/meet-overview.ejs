<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meet Overview</title>
    <link rel="stylesheet" href="/static/header.css" />
    <link rel="stylesheet" href="/static/style.css" />
    <style>
      .meet-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        max-width: 900px;
        margin: 40px auto 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        padding: 2rem;
      }
      .meet-image {
        text-align: center;
      }
      .meet-image img {
        width: 220px;
        height: 220px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 1rem;
      }
      .meet-info h1 {
        margin-bottom: 0.5rem;
      }
      .meet-info p {
        margin: 0.5rem 0;
      }
      .meet-actions {
        margin-top: 2rem;
        display: flex;
        justify-content: flex-start;
        gap: 1.5rem;
      }
      .meet-actions button {
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        background: #53b8d7;
        color: #fff;
        transition: background 0.2s;
      }
      .meet-actions .cancel-btn {
        background: #e0e0e0;
        color: #222;
      }
      .user-match-list-section {
        max-width: 900px;
        margin: 2rem auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        padding: 2rem;
      }
      .user-match-list .user-match {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1rem 0;
        border-bottom: 1px solid #eee;
      }
      .user-match-list .user-match:last-child {
        border-bottom: none;
      }
      .user-photo {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 1rem;
      }
      .your-match-label {
        background: #53b8d7;
        color: #fff;
        border-radius: 6px;
        padding: 0.2em 0.7em;
        font-size: 0.9em;
        margin-left: 0.7em;
      }
      .match-score {
        font-weight: bold;
        color: #53b8d7;
        margin-top: 0.2em;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <div class="meet-grid">
      <div class="meet-image">
        <img
          src="<%= meet.image || '/static/images/map_placeholder.png' %>"
          alt="Meet Image"
        />
      </div>
      <div class="meet-info">
        <h1><%= meet.meetingName %></h1>
        <p><strong>Description:</strong> <%= meet.description %></p>
        <p><strong>Location:</strong> <%= meet.location %></p>
        <p><strong>Date:</strong> <%= meet.date %></p>
        <p><strong>Time:</strong> <%= meet.time %></p>
        <p><strong>Max People:</strong> <%= meet.maxPeople %></p>
        <p><strong>Vibe:</strong> <%= meet.vibe || 'N/A' %></p>
        <p>
          <strong>Preferred Gender:</strong> <%= meet.preferredGender || 'N/A'
          %>
        </p>
        <p>
          <strong>Age Range:</strong> <%= meet.ageMin || '?' %> - <%=
          meet.ageMax || '?' %>
        </p>
        <div
          class="meet-actions"
          id="join-leave-form-container"
          data-meet-id="<%= meet._id %>"
        >
          <% if (!isMember) { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/join"
            style="display: inline"
            class="join-leave-form"
            data-action="join"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit">Join Meet</button>
          </form>
          <% } else { %>
          <form
            method="POST"
            action="/meet/<%= meet._id %>/cancel"
            style="display: inline"
            class="join-leave-form"
            data-action="leave"
          >
            <input type="hidden" name="userId" value="<%= userId || '' %>" />
            <button type="submit" class="cancel-btn">Leave Meet</button>
          </form>
          <% } %>
        </div>
        <div style="margin-top: 2rem">
          <h3>Members:</h3>
          <% if (meet.members && meet.members.length > 0) { %>
          <ul style="list-style: none; padding: 0">
            <% meet.members.forEach(function(member) { %>
            <li><%= member.name %></li>
            <% }) %>
          </ul>
          <% } else { %>
          <p>No one has joined this meet yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="user-match-list-section">
      <h2>Who could you match with?</h2>
      <%- include('partials/user-match-list', { userMatches: userMatches }) %>
    </div>
    <footer><%- include('partials/footer') %></footer>
    <script>
      // Attach event listeners to join/leave forms
      function attachJoinLeaveListeners() {
        document.querySelectorAll(".join-leave-form").forEach((form) => {
          if (!form.hasAttribute("data-listener")) {
            form.setAttribute("data-listener", "true");
            form.addEventListener("submit", async function (e) {
              e.preventDefault();
              const action = form.getAttribute("data-action");
              const url = form.action;
              const formData = new FormData(form);
              await fetch(url, { method: "POST", body: formData });
              if (action === "join") {
                alert("You joined the meet!");
                // Instantly swap to leave button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/cancel' class='join-leave-form' data-action='leave'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit' class='cancel-btn'>Leave Meet</button></form>`;
              } else {
                alert("You left the meet.");
                // Instantly swap to join button
                form.outerHTML = `<form method='POST' action='/meet/<%= meet._id %>/join' class='join-leave-form' data-action='join'><input type='hidden' name='userId' value='<%= userId || '' %>' /><button type='submit'>Join Meet</button></form>`;
              }
              attachJoinLeaveListeners();
            });
          }
        });
      }
      attachJoinLeaveListeners();
    </script>
  </body>
</html>
