<head>
  <link rel="stylesheet" href="/static/css/meet_card.css" />
</head>

<div class="meet-card" data-meet-id="<%= meet._id %>">
  <img
    src="<%= meet.image || '/static/images/map_placeholder.png' %>"
    alt="Meet Image"
    class="meet-image"
  />

  <h3 class="meet-title"><%= meet.title %></h3>

  <div class="meet-meta">
    <p>
      <strong>City:</strong>
      <%= meet.location || '-' %>
    </p>
    <p>
      <strong>Category:</strong>
      <%= meet.category || '-' %>
    </p>
    <p>
      <strong>Date:</strong>
      <%= meet.date || '-' %>
    </p>
    <p>
      <strong>Time:</strong>
      <%= meet.time || '-' %>
    </p>
    <p><strong>Address:</strong> <%= meet.address || '-' %></p>
    <p>
      <strong>Max People:</strong>
      <%= meet.maxPeople || '-' %>
    </p>
    <p>

    </p>
  </div>

  <% if (meet.description) { %>
  <p class="meet-description"><%= meet.description %></p>
  <% } %>

  <div class="meet-actions">
    <a href="/meet/<%= meet._id %>" class="view-btn">View</a>
  </div>
</div>

