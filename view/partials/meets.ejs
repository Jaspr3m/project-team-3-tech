  font-size: 0.9rem;
  color: #555;
  margin-bottom: 0.5rem;
}

.meet-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem 1rem;
  font-size: 0.9rem;
  color: #555;
  margin-bottom: 0.5rem;
}

.meet-meta p {
  margin: 0;
  white-space: nowrap;
  flex: 1 1 45%; /* Makes items wrap nicely */
}


  .meet-meta p {
    font-size: 0.9rem;
    margin: 0.2rem 0;
    color: #555;
  }
  
  .meet-description {
    font-size: 0.9rem;
    margin: 0.5rem 0;
    color: #666;
  }
  
  .meet-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }
  
  .meet-actions a,
  .meet-actions button {
    flex: 1;
