<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Meet</title>
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="stylesheet" href="/static/css/create-meet.css" />
    <link rel="stylesheet" href="/static/header.css" />
    <style>
      .meet-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        max-width: 600px;
        margin: 40px auto;
        padding: 32px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        position: relative;
      }
      .meet-grid label {
        font-weight: bold;
        margin-bottom: 6px;
        display: block;
      }
      .meet-grid input[type="text"],
      .meet-grid input[type="number"],
      .meet-grid input[type="date"],
      .meet-grid input[type="time"],
      .meet-grid textarea {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 12px;
        font-size: 15px;
        box-sizing: border-box;
      }
      .meet-grid input[type="file"] {
        margin-bottom: 12px;
      }
      .meet-grid textarea {
        min-height: 60px;
        resize: vertical;
      }
      .meet-actions {
        grid-column: 1 / -1;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        position: absolute;
        right: 32px;
        bottom: 32px;
      }
      .meet-actions button {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        font-size: 15px;
      }
      .meet-actions .create-btn {
        background: #000;
        color: #fff;
      }
      .meet-actions .cancel-btn {
        background: #e0e0e0;
        color: #222;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <main>
      <div class="meet-grid">
        <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: red; margin-bottom: 1rem; font-weight: bold">
          <%= error %>
        </div>
        <% } %>
        <form
          method="POST"
          action="/users/create-meet"
          enctype="multipart/form-data"
        >
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />

          <label for="description">Short Description:</label>
          <input
            type="text"
            id="description"
            name="description"
            maxlength="256"
            placeholder="Add a short description (max 256 characters)"
            required
          />

          <label for="date">Date:</label>
          <input type="date" id="date" name="date" required />

          <label for="time">Time:</label>
          <input type="time" id="time" name="time" required />

          <label for="maxPeople">Amount of people:</label>
          <input
            type="number"
            id="maxPeople"
            name="maxPeople"
            min="1"
            required
          />

          <label for="location">Location:</label>
          <select id="location" name="location" required>
            <option value="">Select a city</option>
            <option value="Amsterdam">Amsterdam</option>
            <option value="Rotterdam">Rotterdam</option>
            <option value="Utrecht">Utrecht</option>
            <option value="Den Haag">Den Haag</option>
          </select>

          <label for="category">Category:</label>
          <select id="category" name="category" required>
            <option value="">Select a category</option>
            <option value="Party">Party</option>
            <option value="Study">Study</option>
            <option value="Walk">Walk</option>
            <option value="Food">Food</option>
          </select>

          <label for="image">Cover Image:</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
          />

          <div class="meet-actions">
            <button
              type="button"
              class="cancel-btn"
              onclick="window.history.back()"
            >
              Cancel
            </button>
            <button type="submit" class="create-btn">Create Meet</button>
          </div>
        </form>
      </div>
    </main>
    <!-- <footer><%- include('partials/footer') %></footer> -->
  </body>
</html>
