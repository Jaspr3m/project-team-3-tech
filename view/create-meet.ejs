<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Meet</title>
    <link rel="stylesheet" href="/static/css/create-meet.css" />
    <link rel="stylesheet" href="/static/css/header.css" />
     <link rel="stylesheet" href="/static/css/footer.css" />
    <style>
   
    </style>
  </head>
  <body>
     <header> 

<%- include('partials/header') %>
  </header>
    <main>
      <div class="meet-grid">
        <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: red; margin-bottom: 1rem; font-weight: bold">
          <%= error %>
        </div>
        <% } %>
        <form
          method="POST"
          action="/create-meet"
          enctype="multipart/form-data"
        >
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />

          <label for="description">Short Description:</label>
          <input
            type="text"
            id="description"
            name="description"
            maxlength="256"
            placeholder="Add a short description (max 256 characters)"
            required
          />

          <label for="address">Address</label>
          <input type="text" id="address" name="address" required />

          <label for="date">Date:</label>
          <input type="date" id="date" name="date" required />

          <label for="time">Time:</label>
          <input type="time" id="time" name="time" required />

          <label for="maxPeople">Amount of people:</label>
          <input
            type="number"
            id="maxPeople"
            name="maxPeople"
            min="1"
            required
          />

          <label for="location">Location:</label>
          <select id="location" name="location" required>
            <option value="">Select a city</option>
            <option value="Amsterdam">Amsterdam</option>
            <option value="Rotterdam">Rotterdam</option>
            <option value="Utrecht">Utrecht</option>
            <option value="Den Haag">Den Haag</option>
          </select>

          <label for="category">Category:</label>
          <select id="category" name="category" required>
            <option value="">Select a category</option>
            <option value="Party">Party</option>
            <option value="Study">Study</option>
            <option value="Walk">Walk</option>
            <option value="Food">Food</option>
          </select>

          <label for="image">Cover Image:</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
          />

          <div class="meet-actions">
            <button
              type="button"
              class="cancel-btn"
              onclick="window.history.back()"
            >
              Cancel
            </button>
            <button type="submit" class="create-btn">Create Meet</button>
          </div>
        </form>
      </div>
    </main>
    <footer> <%- include('partials/footer', { userId: userId }) %></footer>
  </body>
</html>

