<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Meet</title>
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="stylesheet" href="/static/header.css" />
    <style>
      .meet-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        max-width: 600px;
        margin: 40px auto;
        padding: 32px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        position: relative;
      }
      .meet-grid label {
        font-weight: bold;
        margin-bottom: 6px;
        display: block;
      }
      .meet-grid input[type="text"],
      .meet-grid input[type="number"],
      .meet-grid textarea {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 12px;
        font-size: 15px;
        box-sizing: border-box;
      }
      .meet-grid input[type="file"] {
        margin-bottom: 12px;
      }
      .meet-grid textarea {
        min-height: 60px;
        resize: vertical;
      }
      .meet-actions {
        grid-column: 1 / -1;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        position: absolute;
        right: 32px;
        bottom: 32px;
      }
      .meet-actions button {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        font-size: 15px;
      }
      .meet-actions .create-btn {
        background: #000;
        color: #fff;
      }
      .meet-actions .cancel-btn {
        background: #e0e0e0;
        color: #222;
      }
    </style>
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <main>
      <div class="meet-grid">
        <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: red; margin-bottom: 1rem; font-weight: bold">
          <%= error %>
        </div>
        <% } %>
        <form
          method="POST"
          action="/user/create-meet"
          enctype="multipart/form-data"
        >
          <label for="meetingName">Meet Name:</label>
          <input type="text" id="meetingName" name="meetingName" required />
          <label for="location">Location:</label>
          <input type="text" id="location" name="location" required />
          <label for="description">Description:</label>
          <textarea id="description" name="description" required></textarea>
          <label for="maxPeople">Max People:</label>
          <input
            type="number"
            id="maxPeople"
            name="maxPeople"
            min="1"
            required
          />
          <label for="image">Cover Image:</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
          />
          <div class="meet-actions">
            <button type="submit" class="create-btn">Create Meet</button>
          </div>
        </form>
      </div>
    </main>
    <footer><%- include('partials/footer') %></footer>
  </body>
</html>
