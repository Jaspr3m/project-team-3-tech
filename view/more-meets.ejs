<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TravelLink - Filter Meets</title>
  <link rel="stylesheet" href="/static/style.css" />
  <link rel="stylesheet" href="/static/css/filter.css" />
</head>

<body>
  <!-- <header>
    <a href="/">
      <img src="/static/images/Screenshot 2025-05-12 at 13.42.28.png" alt="Travel Link logo" class="logo">
    </a>
    <input type="text" placeholder="Beach walk, 'party', 'relaxing'" class="search-input">
    <nav>
      <button>Create Meet</button>
      <button>Manage Meets</button>
    </nav>
    <section class="icons">
      <a href="/notifications"><img src="/static/images/alarm.svg" alt="Notifications"></a>
      <a href="/profile"><img src="/static/images/profiel.svg" alt="Profile"></a>
    </section>
  </header> -->

  <header>
    <%- include('partials/header') %>
  </header>


  <main>
    <button id="toggle-filters">Show/Hide Filters</button>

    <section id="filter-container" class="filter-section">
      <h1>Filter Meets</h1>
      <form class="filter-form">
        <label>
          Location:
          <select name="Location">
            <option value="">-- choose --</option>
            <option value="amsterdam">Amsterdam</option>
            <option value="rotterdam">Rotterdam</option>
            <option value="denhaag">Den Haag</option>
            <option value="utrecht">Utrecht</option>
          </select>
        </label>
        <label>
          Category:
          <select name="category">
            <option value="">-- choose --</option>
            <option value="party">Party</option>
            <option value="study">Study</option>
            <option value="walk">Walk</option>
            <option value="walk">Food</option>
          </select>
        </label>
        <label>
          Date:
          <input type="date" name="date">
        </label>
        <button type="submit">Apply Filters</button>
      </form>
    </section>

    <section id="meet-results"></section>
    <a href="/" class="back-link">← Back to Home</a>
  </main>

  <script>
    // Collapse filter section
    const toggleBtn = document.getElementById("toggle-filters");
    const filterContainer = document.getElementById("filter-container");

    toggleBtn.addEventListener("click", () => {
      filterContainer.classList.toggle("hidden");
    });

    // Load and display meets
    async function fetchMeets(filters = {}) {
      const params = new URLSearchParams(filters);
      const res = await fetch(`/api/meets?${params}`);
      const meets = await res.json();

      const container = document.getElementById("meet-results");
      container.innerHTML = ""; // Clear old content

      if (!meets.length) {
        container.innerHTML = "<p>No meets found.</p>";
        return;
      }

      meets.forEach(meet => {
        const div = document.createElement("div");
        div.className = "meet-card";
        div.className = "meet-card";
        div.onclick = () => window.location.href = `/meet/${meet._id}`;
        div.innerHTML = `
          <img src="${meet.image || '/static/images/map_placeholder.png'}" alt="Meet Image" />
        <div class="meet-info">
         <h3>${meet.meetingName}</h3>
         <p>${meet.location}</p>
         <p>${meet.description}</p>
         <p>Max: ${meet.maxPeople}</p>
       </div>
`;

        container.appendChild(div);
      });
    }

    window.onload = () => fetchMeets();

    document.querySelector(".filter-form").addEventListener("submit", e => {
      e.preventDefault();
      const form = e.target;
      const filters = {
        location: form.location.value,
        category: form.category.value,
        date: form.date.value
      };
      fetchMeets(filters);
    });

    // listen for search input
    document.getElementById("searchInput").addEventListener("keypress", function (e) {
      if (e.key === "Enter") {
        e.preventDefault();
        const keyword = e.target.value.trim();
        fetchMeets({ keyword });
      }
    });
  </script>
</body>

</html>